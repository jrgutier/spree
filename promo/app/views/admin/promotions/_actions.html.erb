<fieldset id="action_fields">
  <legend><%= t(:promotion_actions) %></legend>

  <%= form_for(@promotion, :url => object_url, :html => { :method => :put }) do |f| %>
    <div id="actions" class="filter_list">
      <% if @promotion.actions.any? %>
        <%= render :partial => 'promotion_action', :collection => @promotion.actions %>
      <% else %>
        <!-- <p><%= t('no_actions_added') %></p> -->
      <% end %>
    </div>
    <p class="form-buttons">
      <%= button t("update") %>
    </p>
  <% end %>

  <%= form_tag(admin_promotion_promotion_actions_path(@promotion), 'data-remote' => true, :id => 'new_promotion_action_form') do  %>
    <% options = options_for_select( PromotionAction.action_class_names.map {|name| [ t("promotion_action_types.#{name.demodulize.underscore}.name"), name] } ) %>
    <p>
      <label for="promotion_action_type"><%= t('add_action_of_type') %></label>
      <%= select_tag("promotion_action[type]", options) %>
      <input type="submit" value="<%= t('add') %>" />
    </p>
  <% end %>

</fieldset>

